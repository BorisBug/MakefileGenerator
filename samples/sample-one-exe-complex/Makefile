# compiler / linker
CC := gcc

# flags for compilation & linking
CFLAGS := -Wall -Werror -Wpedantic -Wextra -MMD -MP
LDFLAGS :=

# folders
SRCDIR := .
BUILDDIR := build

# executables
EXEC := $(BUILDDIR)/./main""

# folders to include on compilation time
INCS := $(addprefix -I,$(shell find $(SRCDIR) -type f -name "*.h" | xargs dirname | sort | uniq))

# source files
SRCS := lib/buffer/buffer.c lib/canbus/canbus.c lib/memset/memset.c \
	main.c

# objects
OBJS := $(SRCS:%.c=$(BUILDDIR)/%.o)

# targets ########################

# build all
build: $(EXEC)

# run all
run: build
	@echo "**************************************************"
	@echo "Running all executables..."
	@echo "**************************************************"
	@echo ""
	@./$(EXEC)

# compile/link: main
$(EXEC): $(OBJS)
	@$(CC) $^ $(LDFLAGS) -o $@

# targets for each object
$(BUILDDIR)/%.o: %.c
	@mkdir -p $(dir $@)
	@$(CC) -c $< -o $@ $(CFLAGS) $(INCS)

# run: main
main: $(EXEC)
	@echo ""
	@echo "**************************************************"
	@echo "Running main..."
	@echo "**************************************************"
	@echo ""
	@./$(EXEC)

help:
	@clear
	@echo "******************** Targets *********************"
	@echo "help: to print this menu"
	@echo "build: to compile and link all sources (default)"
	@echo "run: to run all the executables"
	@echo "main: to run main"
	@echo "clean: to remove the build folder"
	@echo "**************************************************"
	@echo ""

clean:
	@rm -rf $(BUILDDIR)

.PHONY: help build run main clean

-include $(OBJS:.o=.d)
